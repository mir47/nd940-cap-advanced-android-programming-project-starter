<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button.Dark" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="TextBase" parent="AppTheme">
        <item name="android:textColor">@color/gray50</item>
    </style>

    <style name="SectionTitle" parent="TextBase">
        <item name="android:textSize">@dimen/section_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemTitle" parent="TextBase">
        <item name="android:textSize">@dimen/item_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemBody" parent="TextBase">
        <item name="android:textSize">@dimen/item_body</item>
    </style>

</resources>
